@model IEnumerable<WebAdminConsole.ViewModels.TeamViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (ViewData["NoRunners"] != null)
{
    <h3 class="text-danger">@ViewData["NoRunners"]</h3>
}
@if (ViewData["ElevenPlus"] != null)
{
    <h3 class="text-danger">@ViewData["ElevenPlus"]</h3>
}
@if (ViewData["LessThanEleven"] != null)
{
    <h3 class="text-danger">@ViewData["LessThanEleven"]</h3>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Captain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RunnerCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Captain.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TeamCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RunnerCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TeamId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TeamId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TeamId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
